if test -z "$THIS_SH" ; then 
  THIS_SH=@BASH_PROG@
fi

# Could/short probably replace all uses of THIS_SH with BASH.
BASH=$THIS_SH

TOP_BUILDDIR=`pwd`/../

export BASH TOP_BUILDDIR

check_output() {
  testfile="$1"
  rightfile="$2"
  # Bourne sh
  # set -o noglob

  # Trimming progress bar output printed by readarray's callback.
  sed -i -e 's/^..Reading.*%//' $testfile

  @DIFF@ @DIFF_OPTS@ $testfile $rightfile && rm -f $testfile
  return $?
}

