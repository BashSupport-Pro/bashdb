#!/bin/sh
# -*- shell-script -*-
#$Id: lopts.tests,v 1.7 2008/08/19 22:10:45 rockyb Exp $

[ -z "$srcdir" ] && srcdir=$PWD
[ -z "$builddir" ] && builddir=$PWD

. ${builddir}/check-common.sh

quitcmd="${srcdir}/data/quit.cmd"
contcmd="${srcdir}/data/quit.cmd"
debugged_script="$srcdir/example/dbg-test1.sh"

$SH ${top_builddir}/bashdb --help -q -L .. 
$SH ${top_builddir}/bashdb --quiet -B --library .. \
  -x $quitcmd $debugged_script
$SH ${top_builddir}/bashdb --base --quiet --lib .. --base \
  -x $quitcmd $debugged_script
$SH ${top_builddir}/bashdb -B -q -L .. -x $contcmd --command 'echo test1a'
$SH ${top_builddir}/bashdb --basename --badopt -q -L .. \
  -x $contcmd --command 'echo test2a'
