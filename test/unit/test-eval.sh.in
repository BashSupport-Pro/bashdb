#!@SH_PROG@
# -*- shell-script -*-

test_eval_subst()
{
    # Set up necessary vars
    typeset extracted
    typeset -a texts
    texts=(
	'if (( x == 0 )); then'
	'if (( x == 0 )) ; then'
	'if (( x == 1 ))'
	'elif [[ $x = test ]] && [ $? -eq 0 ] ; then'
	'while [[ $x = test ]] && [ $? -eq 0 ] ; do'
	'while [[ $x = test ]] && [ $? -eq 0 ]'
    )
    
    expected=(
	'(( x == 0 ))'
	'(( x == 0 )) '
	'(( x == 1 ))'
	'[[ $x = test ]] && [ $? -eq 0 ] '
	'[[ $x = test ]] && [ $? -eq 0 ] '
	'[[ $x = test ]] && [ $? -eq 0 ]'
    )
    typeset -i i
    for (( i=0 ; i<${#expected}; i++ )) ; do
	_Dbg_eval_extract_condition "${texts[i]}"
	assertEquals "${expected[i]}" "$extracted"
    done
}

abs_top_srcdir=@abs_top_srcdir@
