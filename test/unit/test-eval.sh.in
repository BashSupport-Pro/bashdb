#!@SH_PROG@
# -*- shell-script -*-

test_eval_subst()
{
    # Set up necessary vars
    typeset extracted
    typeset -a texts
    texts=(
	'if (( x == 1 )); then'
	'if (( y == 2 )) ; then'
	'if (( y == 3 )) ;'
	'if (( y == 4 ))'
	'if (( z == 5 ))   '
	'return something'
	'elif [[ $x = test1 ]] && [ $? -eq 0 ] ; then'
	'while [[ $x = test2 ]] && [ $? -eq 0 ] ; do'
	'while [[ $x = test3 ]] && [ $? -eq 0 ]'
	'x=10'
	'array[1]=20'
	'__fn__+=30'
	'PROFILES="/etc/apparmor.d"'
    )
    
    expected=(
	'(( x == 1 ))'
	'(( y == 2 )) '
	'(( y == 3 )) '
	'(( y == 4 ))'
	'(( z == 5 ))   '
	'echo something'
	'[[ $x = test1 ]] && [ $? -eq 0 ] '
	'[[ $x = test2 ]] && [ $? -eq 0 ] '
	'[[ $x = test3 ]] && [ $? -eq 0 ]'
	'echo 10'
	'echo 20'
	'echo 30'
	'echo "/etc/apparmor.d"'
    )
    typeset -i i
    for (( i=0 ; i<${#expected[@]}; i++ )) ; do
	_Dbg_eval_extract_condition "${texts[i]}"
	assertEquals "${expected[i]}" "$extracted"
    done
}

