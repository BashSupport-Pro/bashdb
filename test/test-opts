#!/bin/sh
# -*- shell-script -*-
#$Id: test-opts,v 1.3 2008/08/09 02:36:19 rockyb Exp $
# Test bash options.

[ -z "$srcdir" ] && srcdir=$PWD
[ -z "$builddir" ] && builddir=$PWD

TEST_NAME='sopts'

. ${builddir}/check-common.sh

TEST_FILE="$builddir/${TEST_NAME}.check"
(cd $srcdir && ${THIS_SH} ${TEST_NAME}.tests > $TEST_FILE 2>&1 < /dev/null)

check_output $TEST_FILE $RIGHT_FILE

TEMP=`getopt1 -o testing 2>&1 >/dev/null`
if [ 0 = $? ] ; then
  TEST_NAME='lopts'
  TEST_FILE="$builddir/${TEST_NAME}.check"
  (cd $srcdir && ${THIS_SH} ${TEST_NAME}.tests > $TEST_FILE 2>&1 < /dev/null)
  
  check_output $TEST_FILE ${srcdir}/${TEST_NAME}.right
fi

# Return code tells testing mechanism whether passed or not.
exit $?
